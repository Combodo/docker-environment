# Default environment configuration
# Folder configuration
HTML_FOLDER=./html
DATA_FOLDER=./data
CONF_FOLDER=./conf

# Database configuration
DB_ROOT_PASSWORD=!mypassword!

# Service enablement (0 = disabled, 1 = enabled)
ENABLE_APACHE=1
ENABLE_NGINX=0
ENABLE_ADMINER=1
ENABLE_MAILPIT=1

# Default port configuration
# Apache ports
APACHE_PORT_88=88
APACHE_PORT_443=443
APACHE_PORT_74=74
APACHE_PORT_80=80
APACHE_PORT_81=81
APACHE_PORT_82=82
APACHE_PORT_83=83
APACHE_PORT_84=84

# Nginx ports (only used if ENABLE_NGINX=1)
NGINX_PORT_88=88
NGINX_PORT_443=443
NGINX_PORT_74=74
NGINX_PORT_80=80
NGINX_PORT_81=81
NGINX_PORT_82=82
NGINX_PORT_83=83
NGINX_PORT_84=84

# Database ports
MARIADB_PORT=3306
MYSQL_PORT=3307

# Tool ports
ADMINER_PORT=8080
MAILPIT_WEB_PORT=8025
MAILPIT_SMTP_PORT=1025